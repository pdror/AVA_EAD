{{#if course}}
{{>_deleteCourse-modal}}
{{>_assignTutor-modal}}
<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="column is-5-tablet is-4-desktop is-4-widescreen">
                    {{#if error}}
                    <div class="notification is-danger">
                        <button class="delete"></button>
                        {{error}}
                    </div>
                    {{/if}}
                    <h1 class="title is-centered">
                        {{course.title}}
                    </h1>
                    <h2 class="subtitle">{{{course.description}}}</h2>
                </div>
                <div class="column">
                </div>
                <div class="column">
                    <p>Código do Curso:</p>
                    <span class="tag is-light is-medium">{{course._id}}</span>
                    {{#if user.isTeacher}}
                    <div class="dropdown options-ddown">
                        <div class="dropdown-trigger">
                            <button class="button" aria-haspopup="true" aria-controls="dropdown-menu options-ddown-menu">
                                <span>Opções</span>
                                <span class="icon is-small">
                                    <i class="fas fa-angle-down" aria-hidden="true"></i>
                                </span>
                            </button>
                        </div>
                        <div class="dropdown-menu" id="dropdown-menu" role="menu">
                            <div class="dropdown-content">
                                <a class="dropdown-item assignTutor-item">
                                    Atribuir um tutor
                                </a>
                                <a class="dropdown-item">
                                    Editar informações
                                </a>
                                <hr class="dropdown-divider">
                                <a class="dropdown-item deleteCourse-item">
                                    Deletar o curso
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    <div class="hero-footer">
        <div class="tabs is-centered is-boxed">
            <ul class"nav-tabs">
                <li class="nav-tab is-active" id="lessons-tab">
                    <a>
                        <span class="icon is-small"><i class="fa fa-book" aria-hidden="true"></i></span>
                        <span>Aulas</span>
                    </a>
                </li>
                <li class="nav-tab" id="people-tab">
                    <a>
                        <span class="icon is-small"><i class="fas fa-address-book" aria-hidden="true"></i></span>
                        <span>Pessoas</span>
                    </a>
                </li>
                <li class="nav-tab" id="discuss-tab">
                    <a href="http://myopenclass.trydiscourse.com" target="_blank">
                        <span class="icon is-small"><i class="fas fa-comments" aria-hidden="true"></i></span>
                        <span>Fórum</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</section>
{{>_people-section}}
{{>_lessons-section}}
{{/if}}